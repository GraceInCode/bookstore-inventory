<h1>Edit Book: <%= book.title %></h1>
<form action="/books/<%= book.id %>?_method=PUT" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= book.title %>" required>

    <label for="author">Author:</label>
    <input type="text" name="author" id="author" value="<%= book.author %>" required>

    <label for="price">Price:</label>
    <input type="number" name="price" id="price" step="0.01" value="<%= book.price %>" required>

    <label for="stock_quantity">Stock Quantity:</label>
    <input type="number" name="stock_quantity" id="stock_quantity" value="<%= book.stock_quantity %>" required>

    <label for="description">Description:</label>
    <textarea name="description" id="description"><%= book.description %></textarea>

    <label for="isbn">ISBN:</label>
    <input type="text" name="isbn" id="isbn" maxlength="13" value="<%= book.isbn %>">

    <label>Categories:</label>
    <% categories.forEach(category => { %>
        <label>
            <input type="checkbox" name="category_ids[]" value="<%= category.id %>"
              <%= bookCategories.includes(category.id) ? 'checked' : '' %>>
              <%= category.name %>
        </label><br>
    <% }) %>
    <label for="admin_password">Admin Password:</label>
    <input type="password" name="admin_password" id="admin_password" required>
    <button type="submit">Update Book</button>
</form>